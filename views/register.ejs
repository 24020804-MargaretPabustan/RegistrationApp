<!DOCTYPE html>
<html>
<head>
    <title>Register</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h1 class="mt-5">Register</h1> <!--THIS IS IMPORTANT IN CA2-->
        <% if (messages && messages.length > 0) { %> <!--If there is more than one message in the message object-->
            <div class="alert alert-danger">
                <% messages.forEach(function(message) { %> <!--Special javascript for loop-->
                    <p><%= message %></p>
                <% }); %>
            </div>
        <% } %>
        <form action="/register" method="POST" class="mt-4">
            <div class="form-group">
                <label for="username">Username:</label>
                <input type="text" id="username" name="username" class="form-control" required 
                <% if (formData && formData.username) { %> value="<%= formData.username %>" <% } else { %> value="" <% } %>>
            </div>
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" class="form-control" required 
                <% if (formData && formData.email) { %> value="<%= formData.email %>" <% } else { %> value="" <% } %>>
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" id="password" name="password" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="address">Address:</label>
                <input type="text" id="address" name="address" class="form-control" required 
                <% if (formData && formData.address) { %> value="<%= formData.address %>" <% } else { %> value="" <% } %>>
            </div>
            <div class="form-group">
                <label for="contact">Contact Number:</label>
                <input type="text" id="contact" name="contact" class="form-control" required 
                <% if (formData && formData.contact) { %> value="<%= formData.contact %>" <% } else { %> value="" <% } %>>
            </div>

            <div class="form-group"> <!--Bootstrap class to make form responsive, give it a nice layout and spacing-->
                <label for="role">Role:</label> <!--Creating a label called "Role"-->
                <select id="role" name="role" class="form-control" required> <!--Dropdown box where user chooses between"User" or "Admin", "form-contol" makes box nice-->
                    <option value = "user" <% if(formData && formData.role === 'user'){%> selected <% } %>>User</option> <!--if formData exists, and formData.role is user, mark this <option> as selected in the dropdown-->
                    <option value = "admin" <% if(formData && formData.role === 'admin'){%> selected <% } %>>Admin</option>
           
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
    
</body>
</html>
